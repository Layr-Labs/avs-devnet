{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "AvsDevnet configuration",
  "$ref": "#/definitions/DevnetConfig",
  "definitions": {
    "DevnetConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "deployments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Deployment"
          }
        },
        "services": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Service"
          }
        },
        "keys": {
          "type": "array",
          "description": "Keys to generate",
          "items": {
            "$ref": "#/definitions/Key"
          }
        },
        "artifacts": {
          "$ref": "#/definitions/Artifacts"
        },
        "ethereum_package": {
          "$ref": "#/definitions/EthereumPackage"
        }
      },
      "required": [],
      "title": "DevnetConfig"
    },
    "Deployment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        },
        "ref": {
          "type": "string"
        },
        "contracts_path": {
          "type": "string"
        },
        "script": {
          "type": "string"
        },
        "extra_args": {
          "type": "string"
        },
        "verify": {
          "type": "boolean"
        },
        "env": {
          "type": "object"
        },
        "input": {
          "type": "object"
        },
        "output": {
          "type": "object"
        },
        "addresses": {
          "type": "object"
        },
        "type": {
          "type": "string"
        },
        "strategies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "operators": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      "required": [],
      "title": "Deployment"
    },
    "Service": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the service"
        },
        "image": {
          "type": "string",
          "description": "Container image for the service"
        },
        "build_context": {
          "type": "string",
          "description": "Context to use when building the image"
        },
        "build_file": {
          "type": "string",
          "default": "Dockerfile",
          "description": "Dockerfile to use when building the image"
        },
        "build_cmd": {
          "type": "string",
          "description": "Command to build the image"
        },
        "ports": {
          "type": "object",
          "description": "Ports to expose on the service"
        },
        "input": {
          "type": "object",
          "description": "Artifacts to mount inside the service"
        },
        "env": {
          "type": "object",
          "description": "Environment variables to set on the service"
        },
        "cmd": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Command to run inside the service"
        }
      },
      "oneOf": [
        {
          "required": [
            "build_context"
          ]
        },
        {
          "required": [
            "build_cmd"
          ],
          "not": {
            "required": [
              "build_file"
            ]
          }
        },
        {
          "not": {
            "anyOf": [
              {
                "required": [
                  "build_context"
                ]
              },
              {
                "required": [
                  "build_file"
                ]
              },
              {
                "required": [
                  "build_cmd"
                ]
              }
            ]
          }
        }
      ],
      "required": [
        "image",
        "name"
      ],
      "title": "Service",
      "description": "A service to start"
    },
    "Key": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "Name for the key",
          "type": "string"
        },
        "type": {
          "description": "Type of key",
          "default": "ecdsa",
          "enum": [
            "ecdsa",
            "bls"
          ]
        },
        "address": {
          "description": "Address of the key",
          "type": "string"
        },
        "private_key": {
          "description": "Private key",
          "type": "string"
        }
      },
      "required": [],
      "title": "Key"
    },
    "Artifacts": {
      "type": "object",
      "description": "Artifacts to generate",
      "additionalProperties": true,
      "required": [],
      "title": "Artifacts"
    },
    "EthereumPackage": {
      "type": "object",
      "description": "ethereum-package args",
      "additionalProperties": true,
      "title": "ethereum-package args"
    }
  }
}
